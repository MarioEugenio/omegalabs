@{
    Layout = null;
}
<h2>Cadastro de Usuario</h2>

<p class="bg-info"><li class="glyphicon glyphicon-info-sign"></li> Os campos com (*) sao de preenchimento obrigatorio</p>

<form role="form" ng-controller="UsuarioController" ng-init="init()" ng-submit="salvar()">
    <div id="alerts-container"></div>
  <div class="form-group">
    <label for="exampleInputEmail1">Nome</label>
    <input type="text" class="form-control" maxlength="255" ng-model="form.USR_NOME" required autofocus placeholder="digite o nome">
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Status</label>
    <select class="form-control" ng-model="form.STA_ID" ng-options="c.STA_ID as c.STA_NOME for c in listStatus" required>
        <option>Selecione...</option>
    </select>
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">E-mail</label>
       <input type="email" class="form-control" maxlength="255" ng-model="form.USR_EMAIL" required placeholder="digite o e-mail">
  </div>

  <div class="row">
      <div class="form-group col-xs-4">
        <label for="exampleInputPassword1">Senha</label>
        <input type="password" class="form-control" maxlength="255" ng-model="form.USR_SENHA" required placeholder="digite a senha">
      </div>
  </div>

  <div class="row">
      <div class="form-group col-xs-4">
        <label for="exampleInputPassword1">Confirme a senha</label>
        <input type="password" class="form-control" maxlength="255" ng-model="form.R_USR_SENHA" required placeholder="confirme a senha">
      </div>
  </div>
  
  <div class="pull-right">
    <button type="submit" class="btn btn-primary"><li class="glyphicon glyphicon-floppy-save"></li> Salvar</button>
    <a href="#/usuario" class="btn btn-default"><li class="glyphicon glyphicon-chevron-left"></li> Voltar</a>
  </div>
</form>
